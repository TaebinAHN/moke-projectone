<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="moke.mokeprojectone.mapper.BoardMapper">
    <select id="selectBoardList" parameterType="moke.mokeprojectone.vo.CriteriaVo" resultType="moke.mokeprojectone.vo.BoardVo">

			SELECT
			  *
			FROM
		    	board
            <if test="keyword != null">
                WHERE
                    board_title
                LIKE
                    concat('%', #{keyword}, '%')
            </if>
            ORDER BY
                board_no
            DESC
            LIMIT #{skip}, #{amount}

    </select>

    <select id="authorGetTotal" parameterType="moke.mokeprojectone.vo.CriteriaVo" resultType="int">

            SELECT
                count(*)
            FROM
                board
            <if test="keyword != null">
               WHERE
                   board_title
               LIKE
                   concat('%', #{keyword}, '%')
            </if>

    </select>


</mapper>